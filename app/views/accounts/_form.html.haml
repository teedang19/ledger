= form_for @account do |f|
  
  %div
    = f.label :name, "Give this account a nickname:"
    = f.text_field :name

  %div
    = f.label :account_classification, "Account Type"
    = f.select :account_classification, options_for_select([["Asset", "Asset Account"], ["Debt", "Debt Account"]], @account.account_classification), include_blank: true

  %div
    = f.label :context
    = f.select :context, grouped_options_for_select([["Asset", ["Liquid", "Investment", "Insurance", "Other"]], ["Debt", ["Credit Card", "Student Loan", "Other"]]], @account.context), include_blank: true

  %div
    = f.label :balance, "Current Balance"
    = f.number_field :balance, step: 0.01

  %div
    = f.submit